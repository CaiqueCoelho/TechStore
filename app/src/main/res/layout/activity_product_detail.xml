<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProductDetailActivity">

    <TextView
        android:id="@+id/product_detail_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:padding="8dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/product_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/product_detail_id"
        app:layout_constraintStart_toStartOf="@+id/product_detail_id"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_id"
        tools:text="Computador" />

    <TextView
        android:id="@+id/product_detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/product_detail_name"
        app:layout_constraintStart_toStartOf="@+id/product_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_name"
        tools:text="Computador de última geração" />

    <TextView
        android:id="@+id/product_detail_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/product_detail_description"
        app:layout_constraintStart_toStartOf="@+id/product_detail_description"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_description"
        tools:text="1000.00" />

</android.support.constraint.ConstraintLayout>